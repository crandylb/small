1       * cat3.s1 -- CAT version for substring capture, CRB, Mar 29, 2014       
2                                                                               
3         BEGIN CAT3;                                                           
4         ENTRY CAT3;                                                           
5                                                                               
6         DCL I,J,LEN;                                                          
7                                                                               
8       * Append substring from BUFF into DEST                                  
9       PROC CAT3(DEST,LA,SRC);                                                 
10   1    LEN=LA SHR 8;                                                         
11   1    I=LA AND 255;                 * anchor index in SRC                   
12   1    J=DEST;                                                               
13   1    DEST=DEST+LEN;                                                        
14   1    DO WHILE LEN;                                                         
15   2      DEST(J)=SRC(I);                                                     
16   2      I=I+1;                                                              
17   2      J=J+1;                                                              
18   2      LEN=LEN-1;                                                          
19   2      ENDDO                                                               
20   1    RETURN                                                                
21   1    ENDPROC                                                               
22   0                                                                          
23   0  END                                                                     
 NO ERRORS DETECTED
